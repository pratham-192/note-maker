<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%=title%>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body class="m-3">
    <h1 class="display-4 font-weight-bold text-center text-danger">Note-Maker</h1>

    <form class="row g-3 m-5 mt-1" method="post" action="/create-note">
        <div class="col-12">
            <label for="heading" class="form-label">Title</label>
            <input type="text" name="heading" class="form-control" id="heading" placeholder="put your title here" required>
        </div>
        <div class="col-12">
            <label for="content" class="form-label">Description</label>
            <input type="text" name="content" class="form-control" id="content" placeholder="What do you need to do" required>
        </div>
        <div class="col-md-4">
            <label for="category" class="form-label">Category</label>
            <select id="category" name="category" class="form-select" required>
                <option selected="personal">Personal</option>
                <option selected="work">Work</option>
                <option selected="cleaning">Cleaning</option>
                <option selected="school">School</option>
                <option selected="study">Study</option>
                <option selected="other">Other</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="deadline" class="form-label">Deadline</label>
            <input type="date" name="deadline" class="form-control" id="deadline" required>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">ADD</button>
        </div>
    </form>
    <div class="container">
        <div class="row">
            <% for(let i of note_list){%>

                <div class="col-lg-4 col-md-6 col-sm-12 p-2">
                    <div class="card">
                        <div class="card-body">
                            <div class="delete-button">
                                <a class="float-end text-danger" href="/delete-note/?id=<%= i.id %>">
                                    Delete
                                </a>
                            </div>
                            <h5 class="card-title">
                                <%=i.heading %>
                            </h5>
                            <p class="card-text">
                                <%=i.content %>
                            </p>
                            <p class="card-text d-inline">
                                <small class="text-muted">
                                    <%=i.category %>
                                </small>
                                <small class="text-muted p-5">
                                    <%=i.deadline %>
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
                <%} %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>